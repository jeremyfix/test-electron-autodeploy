{
  "name": "MyMarkdownEditor",
  "version": "1.0.3",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "DEBUG=true electron .",
	"release": "electron-builder build --publish always"
  },
  "keywords": [],
  "author": "Jeremy Fix",
  "description": "A simple Markdown editor app to test multi-platform dev",
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^13.1.9",
    "electron-builder": "^22.11.7"
  },
  "dependencies": {
    "simplemde": "^1.11.2"
  },
  "repository" : {
	  "type": "git",
	  "url": "https://github.com/jeremyfix/test-electron-autodeploy"
  },
  "build": {
	  "productName": "MyMarkdowneditor",
	  "files": ["build/icons/icon*"],
	  "mac": {
		"category": "public.app-category.developer-tools",
		"artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
		"icon": "build/icons/icon.icns",
		"hardenedRuntime": true
	  },
	  "windows" : {
		  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}","
		  "icon": "build/icons/icon.ico"
	  },
	  "linux": {
		"target": "AppImage",
		"artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
		"category": "Utility",
		"icon": "build/icons/icon.png"
	  },
	  "publish": {
		"provider": "github",
		"owner": "jeremyfix",
		"repo": "test-electron-autodeploy"
	  }
  }
}
